{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    },
    "react-mcp": {
      "command": "node",
      "args": [
        "/home/ava-io/repos/react-mcp/index.js"
      ],
      "env": {
        "PROJECT_PATH": "/home/ava-io/repos/bigfootlive-react-frontend"
      }
    },
    "aws-api": {
      "command": "uvx",
      "args": [
        "awslabs.aws-api-mcp-server@latest"
      ],
      "env": {
        "AWS_REGION": "us-west-1"
      },
      "timeout": 60000
    },
    "aws-ecs": {
      "command": "uvx",
      "args": [
        "awslabs.ecs-mcp-server@latest"
      ],
      "env": {
        "AWS_REGION": "us-west-1"
      },
      "timeout": 60000
    },
    "aws-s3-tables": {
      "command": "uvx",
      "args": [
        "awslabs.s3-tables-mcp-server@latest"
      ],
      "env": {
        "AWS_REGION": "us-west-1"
      },
      "timeout": 60000
    },
    "terraform": {
      "command": "/home/ava-io/repos/terraform-mcp-server/bin/terraform-mcp-server",
      "args": [
        "stdio"
      ],
      "timeout": 60000
    },
    "playwright": {
      "command": "node",
      "args": [
        "/home/ava-io/repos/playwright-mcp/index.js"
      ],
      "timeout": 60000
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@github/mcp-server@latest"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}"
      },
      "timeout": 60000
    },
    "k6": {
      "command": "uvx",
      "args": [
        "k6-mcp-server@latest"
      ],
      "timeout": 60000
    },
    "ffmpeg": {
      "command": "npx",
      "args": [
        "-y",
        "mcp-ffmpeg@latest"
      ],
      "timeout": 60000
    }
  }
}